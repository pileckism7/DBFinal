##View our Customers
---------------------------------------------------------------------------------------------------------
db.customers.distinct("Customers", {Company :"Daymnzon"})
---------------------------------------------------------------------------------------------------------

##View our suppliers
---------------------------------------------------------------------------------------------------------
db.products.distinct("Products.Supplier", {Company :"Daymnzon"})
---------------------------------------------------------------------------------------------------------

//View our products
---------------------------------------------------------------------------------------------------------
db.products.aggregate(
	{$project : {Company : 1, Products:1 }}, 
	{$unwind: "$Products"},
	{$match : {"Company" : "Daymnzon"}}
).pretty()
---------------------------------------------------------------------------------------------------------

##View partner Customers
---------------------------------------------------------------------------------------------------------
 db.customers.distinct("Customers", {Company :"Other"})
---------------------------------------------------------------------------------------------------------

##View products that are not of Daymnzon Company - > Partner Products Only
---------------------------------------------------------------------------------------------------------
db.products.aggregate(
	{$project : {Company : 1, Products:1}},
	{$unwind: "$Products"},
	{$match : {"Company" : {$nin : ["Daymnzon"]}}}).pretty()
---------------------------------------------------------------------------------------------------------

##View partner suppliers
---------------------------------------------------------------------------------------------------------
db.products.distinct("Products.Supplier", {Company : {$nin :["Daymnzon"]}})
---------------------------------------------------------------------------------------------------------

##View our inventory
---------------------------------------------------------------------------------------------------------
db.products.distinct("Products", {Company :"Daymnzon"})
---------------------------------------------------------------------------------------------------------

##SEARCH BY CATEGORY -> Replace ##TYPE## by category which you want to search..
---------------------------------------------------------------------------------------------------------
 db.products.aggregate( {$project : {Company : 1, Products:1 }},  {$unwind: "$Products"}, {$match : {"Products.Type" : "##TYPE##"}} ).pretty()
